<% include header%>
<div class="page-wrapper">
    <div class="container-fluid">
            
        <div class="textAdd">
            <div class="title">上传文章</div>
                 <form action="/admin/textInsert" method="post" enctype="multipart/form-data">
                    <div class="row">
                      <div class="input-group col-md-6">
                        <span class="input-group-addon">文章题目</span>
                        <input type="text" class="form-control" name="title">
                      </div>
                
                      <div class="input-group col-md-6">
                        <span class="input-group-addon">关键字词</span>
                        <input type="text" class="form-control" name="keywords">
                      </div>
                    
                      <div class="input-group col-md-6">
                            <span class="input-group-addon">文章封面</span>
                            <input type="file" class="form-control" name="imgurl">
                      </div>
                      <div class="input-group col-md-6">
                            <span class="input-group-addon">作者姓名</span>
                            <input type="text" class="form-control" name="author">
                      </div>
                      <div class="input-group col-md-6">
                            <span class="input-group-addon">文章描述</span>
                            <input type="text" class="form-control" name="description">
                      </div>
                      <div class="input-group col-md-6">
                        <span class="input-group-addon">文章分类</span>
                        <select class="form-control" name="itemId">
                          <% items.forEach(function(item){ %>
                            <option value="<%=item._id%>"><%=item.name%></option>
                          <% }) %>
                        </select>
                      </div>    
                      <div class="col-md-12 content">
                            <!-- 加载编辑器的容器 -->
                          <script id="content" name="content" type="text/plain">
                          </script> 				
                      </div>
                      <div class="input-group col-md-6 dablebtn">
                            <input type="reset" value="重置内容" class="btn-danger btn-sm">
                          </div>
                      <div class="input-group col-md-6 dablebtn">
                        <input type="submit" value="提交文章" class="btn-success btn-sm">
                      </div>   
                    </div>            
                 </form> 
                
            </div>
    </div>
</div>
<!-- 引入 富文本 插件 -->
<script src="/ueditor/ueditor.config.js"></script>
<script src="/ueditor/ueditor.all.min.js"></script>
<script>
    // 实例化 	富文本
    var ue = UE.getEditor('content');

</script>
<% include footer%>